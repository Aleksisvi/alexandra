#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");
	int num;
	char sasha[] = "Svirina";
	char tonya[] = "Tsidenkova";
	char andrey[] = "Sadovsky";

	cout << "Введите номер бригады: ";
	cin >> num;

	cout << "Бригада № " << num << endl;

	cout << sasha << endl  << tonya << endl  << andrey << endl;
	printf_s("%s \n%s \n%s \n", sasha, tonya, andrey);

	int mas[3] = { 1, 2, 3 };
	int mmm[3] = { 4, 5, 6 };

	for (int i = 0; i < 3; ++i)
		printf("%d, ", mas[i]);
	for (int i = 0; i < 3; ++i)
		printf("%d, ", mmm[i]);
}
